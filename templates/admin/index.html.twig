{% extends 'base.html.twig' %}

{% block title %}Gestion des utilisateurs{% endblock %}

{% block body %}

<div class="container">
    <h2 class="mb-3">Liste des utilisateurs</h2>
    <ul class="row">
        {% for user in listUser%}
        <li class="col-12 col-lg-3">
            <div class="card">
                <div class="card-body">
                    <p class="mb-0">{{user.username}}</p>
                    <p class="mb-0">{{user.roles[0]}}</p>
                    <p class="mb-3">{{user.email}}</p>
                    <div class="row">
                        <div class="col-6"><a href="{{path('app_admin_edit', {id : user.id})}}">
                                <i class="far fa-edit fa-lg"></i> Modifier</a>
                        </div>
                        <div class="col-6">
                            <a href="{{path('app_admin_delete', {id : user.id})}}">
                                <i class="far fa-trash-alt fa-lg"></i>
                                Supprimer
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </li>
        {% endfor%}
    </ul>
    <h2 class="mb-3">Cr√©ation d'un utilisateur</h2>
    {{form_start(formAddUser)}}
    {{form_widget(formAddUser)}}
    <button type="submit" class="btn btn-primary">Ajouter un utilisateur</button>
    {{form_end(formAddUser)}}
</div>

{% endblock %}