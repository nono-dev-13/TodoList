{% extends 'base.html.twig' %}

{% block title %}List des tâches{% endblock %}

{% block body %}

<div class="container">
    <div class="row">
        <div class="col-12">
            <ul>
                {% for task in listTask %}
                <li>
                    <p class="mb-0">
                        <small>tâche créer par</small>
                    </p>
                    <div class="card">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-12 col-lg-1 fw-bold mb-3">{{task.title}}</div>
                                <div class="col-12 col-lg-5 mb-3">{{task.content}}</div>
                                <div class="col-12 col-lg-2 mb-3"><small class="text-muted">{{task.createdAt |
                                        date('d/m/Y')}}</small></div>
                                <div class="col-12 col-lg-1 mb-3">{{task.isDone}}</div>
                                <div class="col-6 col-lg-1 mb-3"><a href="#"><i
                                            class="far fa-edit fa-lg"></i>Modifier</a>
                                </div>
                                <div class="col-6 col-lg-1"><a href="#"><i
                                            class="far fa-trash-alt fa-lg"></i>Supprimer</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </li>
                {% endfor %}
            </ul>
        </div>
    </div>
</div>

{% endblock %}